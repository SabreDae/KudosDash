@model KudosDash.Models.EditFeedbackVM

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Feedback</h4>
<hr />
<div class="row d-flex align-items-center justify-content-center">
    <div class="col-md-6 card p-5">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" disabled asp-for="Id" />
            <div class="form-group">
                <label asp-for="TargetUser" class="control-label"></label>
                @Html.DropDownListFor(model => model.TargetUser, (List<SelectListItem>)ViewBag.TeamMembers, " ", new { @class = "form-select", @disabled = "disabled" } )
                <span asp-validation-for="TargetUser" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FeedbackDate" class="control-label"></label>
                <input asp-for="FeedbackDate" class="form-control" />
                <span asp-validation-for="FeedbackDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FeedbackText" class="control-label"></label>
                <textarea asp-for="FeedbackText" class="form-control"></textarea>
                <span asp-validation-for="FeedbackText" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
