@model KudosDash.Models.Feedback

@{
    ViewData["Title"] = "Create";
}
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/ckeditor/ckeditor.js"></script>
<h1>Submit Feedback</h1>

<hr />
<div class="row">
    <div>
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TargetUser" class="control-label"></label>
                @Html.DropDownListFor(model => model.TargetUser, (List<SelectListItem>)ViewBag.Team, " ", new { @class = "form-select" })
                <span asp-validation-for="TargetUser" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FeedbackDate" class="control-label"></label>
                @Html.TextBoxFor(model => model.FeedbackDate, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date" })
                <span asp-validation-for="FeedbackDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FeedbackText" class="control-label"></label>
                <textarea asp-for="FeedbackText" id="FeedbackEditor" class="form-control"></textarea>
                <span asp-validation-for="FeedbackText" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Submit Feedback" class="btn btn-lg btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script type="text/javascript">
    $(document).ready(function () {
        CKEDITOR.replace(document.getElementById("FeedbackEditor"));
    });
</script>
