﻿@using KudosDash.Models.Users;
@model AccountVM

@{
    ViewData["Title"] = "Details";
}


    <div class="row d-flex align-items-center justify-content-center">
        <div class="col-md-6 card p-5">
        <h1 class="text-center text-primary">Account Details</h1>
        <form asp-action="Details" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input disabled asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input disabled asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input disabled asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeamName" class="control-label"></label>
                @Html.DropDownListFor(model => model.TeamName, (SelectList)ViewBag.TeamChoices, "", new { @class = "form-select", @disabled = "disabled"})
                <span asp-validation-for="TeamName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group ms-1">
                <input type="button" id="updateButton" value="Update Details" class="btn btn-primary"/>
                <button hidden type="submit" id="submitButton" value="Save Edits" class="btn btn-success">Save Edits</button>
                <a asp-controller="Account" asp-action="Delete" class="btn btn-danger">Delete Account?</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script type="text/javascript">
    const updateButton = document.getElementById("updateButton")
    const submitButton = document.getElementById("submitButton")
    const disabledFields = ["FirstName", "LastName", "Email", "TeamName"]
    updateButton.addEventListener("click", function() {
        disabledFields.forEach(field => document.getElementById(field).removeAttribute("disabled"));
        submitButton.removeAttribute("hidden")
    })
</script>
