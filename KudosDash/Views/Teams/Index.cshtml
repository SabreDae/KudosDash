@model IEnumerable<KudosDash.Models.Teams>

@{
    ViewData["Title"] = "Index";
}

<h1>Teams</h1>
<p>
    <a class="btn btn-lg btn-success" asp-action="Create">Create New</a>
</p>
<table class="table table-striped table-hover table-bordered">
    <thead class="table-primary">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TeamName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TeamName)
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.TeamId">Edit</a>
                    <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.TeamId">Details</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.TeamId">Delete</a>
                </td>
            </tr>
            }
    </tbody>
</table>